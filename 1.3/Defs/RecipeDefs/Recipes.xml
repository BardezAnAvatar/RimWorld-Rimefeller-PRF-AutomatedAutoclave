<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 
    Note on workAmount:
    Work amount is 60 ticks or work per 1 in-game second. Per Wiki, 1 day is 1000 seconds.
    Autoclave requires 12 in-game hours to run, so ... (500 seconds * 60) work, no?
    https://rimworldwiki.com/wiki/Work_To_Make
   -->

  <RecipeDef>
    <defName>Autoclave_CureSynthamideComposite</defName>
    <label>Cure Synthamide Composite</label>
    <description>Use heat and pressure to cure uncured synthamide composite</description>
    <jobString>Curing</jobString>
    <effectWorking>Cook</effectWorking>
    <workSkill>Cooking</workSkill>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <workAmount>30000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>UncuredComposite</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>UncuredComposite</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <FiberComposite>50</FiberComposite>
    </products>
    <recipeUsers>
      <li>PRFAutoclave</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef>
    <defName>Autoclave_CurePlasteel</defName>
    <label>Cure Plasteel</label>
    <description>Use heat and pressure to cure uncured plasteel</description>
    <jobString>Curing</jobString>
    <effectWorking>Cook</effectWorking>
    <workSkill>Cooking</workSkill>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <workAmount>30000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>UncuredPlasteel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>UncuredPlasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Plasteel>50</Plasteel>
    </products>
    <recipeUsers>
      <li>PRFAutoclave</li>
    </recipeUsers>
  </RecipeDef>

</Defs>
